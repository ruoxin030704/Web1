@page "{id:int}"
@model WebApp1.Pages.Photos.EditModel
@{
    ViewData["Title"] = "Edit Photo";
}

<h1>Edit Photo</h1>

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Photo.Title"></label>
        <input asp-for="Photo.Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Photo.Description"></label>
        <input asp-for="Photo.Description" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Photo.DateAdded"></label>
        <input asp-for="Photo.DateAdded" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Upload"></label>
        <input type="file" asp-for="Upload" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
