@page "{id:int}"
@model WebApp1.Pages.Photos.DeleteModel
@{
    ViewData["Title"] = "Delete Photo";
}

<h1>Delete Photo</h1>

<h3>Are you sure you want to delete this photo?</h3>
<div>
    <h4>Photo</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Title
        </dt>
        <dd class="col-sm-10">
            @Model.Photo.Title
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model.Photo.Description
        </dd>
        <dt class="col-sm-2">
            Date Added
        </dt>
        <dd class="col-sm-10">
            @Model.Photo.DateAdded
        </dd>
        <dt class="col-sm-2">
            Image
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.Photo.ImageUrl" width="100" />
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Photo.Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
